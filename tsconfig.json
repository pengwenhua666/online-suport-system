{
    "compilerOptions": {
        "target": "es6",
        "strict": false,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "@online-suport-system/*": [
                "online-suport-system/*"
            ]
        }

    },
    "exclude": ["node_modules"]
}